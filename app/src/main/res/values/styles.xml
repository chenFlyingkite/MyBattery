<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- Customize your theme here.

           parent="@android:style/Theme.Translucent"

     -->
    <style name="AppThemeNoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="notificationButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#8000</item>
    </style>

    <style name="notificationIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="baseText">
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="notificationText" parent="baseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notifText" parent="baseText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="mainText" parent="notificationText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/t5dp</item>
        <item name="android:textSize">@dimen/t20sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="mainText.smaller">
        <item name="android:textSize">@dimen/t18sp</item>
    </style>
    <style name="mainText.smaller.table">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="mainText.smaller2">
        <item name="android:textSize">@dimen/t14sp</item>
    </style>
    <style name="mainText.header">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/skyBlue</item>
    </style>
    <style name="mainIcon">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>

    <style name="weightOne">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="grayButton" parent="mainText">
        <item name="android:background">@drawable/bg_button_gray</item>
    </style>

    <style name="grayButton.smaller" parent="mainText.smaller">
        <item name="android:background">@drawable/bg_button_gray</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/t2dp</item>
        <item name="android:layout_marginBottom">@dimen/t5dp</item>
        <item name="android:background">#aaa</item>
    </style>
</resources>
